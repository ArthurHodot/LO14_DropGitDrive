#!/bin/bash
#Ask user which file to use when 2 files are in conflict

root_path=""

#Testing arguments
if [ $# -ne 3 ]
then
	echo "Usage $0 : pathA pathB pathLog"
	exit 1
fi

if [[ ! -f $1 ]]
then
	echo "$1 not found !"
	exit 2
elif [[ ! -f $2 ]]
then
	echo "$2 not found !"
	exit 2
elif [[ ! -f $3 ]]
then
	echo "Log $3 not found !"
	exit 2
fi

#Asking user what is the file to save
#Get the last modification date of the 2 files
lmdFileA=$(stat -c %y $1 | cut -d '.' -f1)
lmdFileB=$(stat -c %y $2 | cut -d '.' -f1)
echo -e "Content conflict detected ! Do you want to replace $1 by $2 or the opposite ?"
echo -e "Last Modification Date :\n $1 [$lmdFileA]\n $2 [$lmdFileB]"
echo -e "[1] Replace $2 by $1\n [2] Replace $1 by $2\n Your choice [1/2] :"

read userChoice

until [ $userChoice = "1" -o $userChoice = "2" ]
do
	echo -e "Incorrect answer ! Please use 1 or 2 to select the relevant option"
	echo -e "[1] Replace $2 by $1\n [2] Replace $1 by $2\n Your choice [1/2] :"
	read userChoice
done

#Executing the corresponding action
if [ $userChoice -eq 1 ]
then
	${root_path}bin/element_duplicator $1 $2
else
	${root_path}bin/element_duplicator $2 $1	
fi
