#!/bin/bash

#Compare 2 files with all metadata (size, permission, date of last modification)

#Check args validity
if [ $# -ne 3 ]
then
	echo "Usage $0 : pathFile1 pathFile2 optionConfig(manual[1]/auto[2])"
	exit 1
elif [[ ! -f $1 ]]
then
	echo "File not found : $1"
	exit 2
elif [[ ! -f $2 ]]
then
	echo "File not found : $2"
	exit 2
elif [ $3 -ne "1" -a $3 -ne "2" ]
then
	echo "Unknow optionConfig ! Use 0 for manual management of conflicts and 1 for automatic management of conflicts"
	exit 3
fi

#Compare size
sizeFile1=$(du -b $1 | cut -f1 )
sizeFile2=$(du -b $2 | cut -f1 )
if [ $sizeFile1 -ne $sizeFile2 ]
then
	bin/conflict/conflict_manager 5 $3 $1 $2
fi

#Compare last modification date
dateFile1=$(stat -c %Y $1) #Print this date in seconds since Epoch
dateFile2=$(stat -c %Y $2)
if [ $dateFile1 -ne $dateFile2 ]
then
	bin/conflict/conflict_manager 5 $3 $1 $2
fi

#Compare permission
permFile1=$(stat -c %a $1)
permFile2=$(stat -c %a $2)
if [ $permFile1 -ne $permFile2 ]
then
	bin/conflict/conflict_manager 5 $3 $1 $2
fi

#Compare content
diff $1 $2 >> /dev/null
if [ $? -ne 0 ]
then
	bin/conflict/conflict_manager 4 $3 $1 $2
exit 0
