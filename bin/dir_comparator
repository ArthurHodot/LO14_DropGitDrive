#!/bin/bash
#Cod√© avec le cul par mes soins
#Compare 2 directories with all metadata (permission)

#Check args validity
if [ $# -ne 2 ]
then
	echo "Usage $0 : pathDir1 pathDir2"
	exit 1
elif [[ ! -d $1 ]]
then
	echo "Directory not found : $1"
elif [[ ! -d $2 ]]
then
	echo "Directory not found : $2"
fi

#Compare permission
permDir1=$(stat -c %a $1)
permDir2=$(stat -c %a $2)
if [ $permDir1 -ne $permDir2 ]
then
	echo "Dir Permission conflict ! "
	######## CALL CONFLICT FUNCTION HERE ########
fi

exit 0
